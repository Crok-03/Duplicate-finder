{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_PREFIX_PATH=C:/msys64/mingw64"
            ]
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build"
            ],
            "dependsOn": "cmake configure",
            "group": "build"
        }
    ]
}
